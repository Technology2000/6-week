import java.util.*;
class TestClass {
    public static void main(String args[] ) throws Exception {
        Scanner sc = new Scanner(System.in);
        int T=sc.nextInt();
       while(T-->0)
       {
           long N=sc.nextLong();
           N-=2;
           if(N>1)
           System.out.println(N*(N+1)/2 -1);
           else
           System.out.println("0");
       }
    }
}
